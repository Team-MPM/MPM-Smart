@page "/Settings/Logs"
@using Frontend.Services

@inject ApiAccessor Api

<MudContainer Style="height: 700px" Class="p-4">
    <MudText Typo="Typo.h4">Logs</MudText>
    <MudPaper Class="mt-2 p-2" Elevation="1" Style="max-height: 600px; overflow-y: auto;">
        <MudList Dense="true" T="string">
            @foreach(var item in m_Data ?? [])
            {
                <MudListItem T="string">
                    <MudText Color="Color.Success">@item</MudText>
                </MudListItem>
            }
        </MudList>
    </MudPaper>
</MudContainer>

@code {

    private string[]? m_Data;

    protected override async Task OnInitializedAsync()
    {
        var result = await Api.GetBackendLogs();
        m_Data = result is { Success: true, Response: not null } ? result.Response : null;
        StateHasChanged();
    }

}